<UserControl x:Class="Hearthstone_Deck_Tracker.Help"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="600">
    <DockPanel>
        <Border BorderBrush="{DynamicResource AccentColorBrush}" BorderThickness="1" Margin="-1"
                DockPanel.Dock="Bottom">
            <DockPanel VerticalAlignment="Bottom">
                <Button Name="ButtonUpdateNotes" Content="Show update notes" Click="ButtonUpdateNotes_OnClick"
                        DockPanel.Dock="Right" Margin="2" Width="200"
                        Style="{DynamicResource AccentedSquareButtonStyle}" />
                <TextBlock Name="TxtblockVersion" Text="Version:" VerticalAlignment="Center" Margin="10,0,0,0" />
            </DockPanel>
        </Border>
        <ScrollViewer>
            <StackPanel>
                <GroupBox Header="{DynamicResource FAQ}">
                    <TextBlock Margin="10,0,10,0" VerticalAlignment="Top" Width="auto" TextWrapping="Wrap">
                        <Hyperlink
                            NavigateUri="https://github.com/Epix37/Hearthstone-Deck-Tracker/wiki/FAQ"
                            RequestNavigate="Hyperlink_RequestNavigate">
                            Go to the FAQ.
                        </Hyperlink>
                    </TextBlock>
                </GroupBox>
                <GroupBox Header="{DynamicResource The Overlay}">
                    <StackPanel>
                        <GroupBox Header="{DynamicResource Card marks}">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="/HearthstoneDeckTracker;component/Images/card-icon-coin.png"
                                       RenderOptions.BitmapScalingMode="Fant" Width="16" />
                                <Label Content="{DynamicResource The Coin}" />
                                <Image Source="/HearthstoneDeckTracker;component/Images/card-icon-mulligan.png"
                                       RenderOptions.BitmapScalingMode="Fant"
                                       Width="16" Margin="10,0,0,0" />
                                <Label Content="{DynamicResource Mulliganed}" />
                                <Image Source="/HearthstoneDeckTracker;component/Images/card-icon-returned.png"
                                       RenderOptions.BitmapScalingMode="Fant"
                                       Width="16" Margin="10,0,0,0" />
                                <Label Content="{DynamicResource Returned}" />
                                <Image Source="/HearthstoneDeckTracker;component/Images/card-icon-created.png"
                                       RenderOptions.BitmapScalingMode="Fant"
                                       Width="16" Margin="10,0,0,0" />
                                <Label Content="{DynamicResource Created}" />
                            </StackPanel>
                        </GroupBox>
                        <GroupBox Header="{DynamicResource Percentages}">
                            <StackPanel Margin="10,0">
                                <TextBlock Text="{DynamicResource General:}" FontWeight="Bold" />
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="/HearthstoneDeckTracker;component/Resources/overlay_1.png"
                                           Height="13" Margin="5,0,0,0" RenderOptions.BitmapScalingMode="Fant" />
                                    <TextBlock Text=" /" VerticalAlignment="Center" />
                                    <Image Source="/HearthstoneDeckTracker;component/Resources/overlay_2.png"
                                           Height="13" Margin="5,0,0,0" RenderOptions.BitmapScalingMode="Fant" />
                                    <TextBlock Text="{DynamicResource The number of copies left in the deck for a specific card.}"
                                               VerticalAlignment="Center" />
                                </StackPanel>
                                <TextBlock Text="{DynamicResource Draw chance:}" FontWeight="Bold" Margin="0,5,0,0"/>
                                <StackPanel Orientation="Horizontal" Margin="0,5">
                                    <Image Source="/HearthstoneDeckTracker;component/Resources/overlay_deck.png"
                                           Width="18" Margin="5,0,0,0" RenderOptions.BitmapScalingMode="Fant" />
                                    <TextBlock Text="{DynamicResource The chance of drawing a card with X copies left in the deck.}"
                                               Margin="5,0,0,0" VerticalAlignment="Center" />
                                </StackPanel>
                                <TextBlock Text="{DynamicResource Holding chance:}" FontWeight="Bold" />
                                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                    <Image Source="/HearthstoneDeckTracker;component/Resources/overlay_hand.png"
                                           Width="18" Margin="5,0,0,0" RenderOptions.BitmapScalingMode="Fant" />
                                    <TextBlock Margin="5,0,0,0"
                                               Text="{DynamicResource The chance of your opponent holding a card at the start of the next turn with X copies left in play.}"
                                               VerticalAlignment="Center" />
                                </StackPanel>
                                <TextBlock Margin="28,0,0,0"
                                           Text="{DynamicResource This includes the next draw but nothing beyond that.}"
                                           FontStyle="Italic" />
                            </StackPanel>
                        </GroupBox>
                        <GroupBox Header="{DynamicResource Customization}">
                            <StackPanel Margin="10, 0">
                                <TextBlock
                                    Text="{DynamicResource Almost everything in the overlay can be turn on or off. moved and resized.}" />
                                <TextBlock Text="{DynamicResource On/off :}" FontWeight="Bold" Margin="0,5,0,0" />
                                <TextBlock>
                                    <Run Text="{DynamicResource Options for this can be found under}"></Run>
                                    <Italic>
                                        <Run Text="{DynamicResource options > overlay > general / player / opponent}"></Run>
                                    </Italic>
                                    <Run>.</Run>
                                </TextBlock>
                                <TextBlock Text="{DynamicResource Moving/resizing :}" FontWeight="Bold" Margin="0,5,0,0" />
                                <TextBlock>
                                    <Run Text="{DynamicResource The overlay can be unlocked via}"> </Run>
                                    <Italic>
                                        <Run Text="{DynamicResource options > overlay > general > unlock}"> </Run>
                                    </Italic>
                                    <Run Text="{DynamicResource (button at the bottom).}"></Run>
                                </TextBlock>
                            </StackPanel>
                        </GroupBox>
                        <TextBlock Margin="10,0,10,0" VerticalAlignment="Top" Width="auto" TextWrapping="Wrap">
                            <Hyperlink
                                NavigateUri="https://github.com/Epix37/Hearthstone-Deck-Tracker/wiki/Overlay"
                                RequestNavigate="Hyperlink_RequestNavigate">
                                Additional information can be found here.
                            </Hyperlink>
                        </TextBlock>
                    </StackPanel>

                </GroupBox>
                <GroupBox Header="{DynamicResource Reporting bugs / requesting features}">
                    <TextBlock Margin="10,0,10,0" VerticalAlignment="Top" Width="auto" TextWrapping="Wrap">
                        <Run Text="Two options:" />
                        <LineBreak />
                        <Run Text="1) Check out the" />
                        <Hyperlink
                            NavigateUri="https://github.com/Epix37/Hearthstone-Deck-Tracker/issues?state=open"
                            RequestNavigate="Hyperlink_RequestNavigate">
                            issues on GitHub.
                        </Hyperlink>
                        <Run
                            Text="If there's no issue on the topic feel free to open a new one and/or even fix it yourself and create a pull request. For some futher information on what you might want to include in the issue " />
                        <Hyperlink
                            NavigateUri="https://github.com/Epix37/Hearthstone-Deck-Tracker/wiki/Reporting-Issues"
                            RequestNavigate="Hyperlink_RequestNavigate">
                            click here.
                        </Hyperlink>
                        <LineBreak />
                        <Run Text="2) Send an email to support@hsdecktracker.net" />
                    </TextBlock>
                </GroupBox>
                <GroupBox Header="{DynamicResource GitHub Project}">
                    <StackPanel>
                        <TextBlock Margin="10,0,10,0" VerticalAlignment="Top">
                            <Run Text="The project can be found" />
                            <Hyperlink NavigateUri="https://github.com/Epix37/Hearthstone-Deck-Tracker/"
                                       RequestNavigate="Hyperlink_RequestNavigate">
                                here.
                            </Hyperlink>
                            <LineBreak />
                            <Run Text="The" />
                            <Hyperlink
                                NavigateUri="https://github.com/Epix37/Hearthstone-Deck-Tracker/blob/master/README.md"
                                RequestNavigate="Hyperlink_RequestNavigate">
                                readme
                            </Hyperlink>
                            <Run
                                Text="contains a brief overview of all the features." />
                        </TextBlock>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</UserControl>
